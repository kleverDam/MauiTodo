<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiTODO.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewPage="clr-namespace:MauiTODO.View"
    xmlns:local="clr-namespace:MauiTODO"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate viewPage:LoginPage}"
        Route="LoginPage"/>

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate viewPage:HomePage}"
        Route="MainPage"/>
    <ShellContent
        Title="AltaEdicion"
        ContentTemplate="{DataTemplate viewPage:AltaEdicionPage}"
        Route="AltaEdicionPage"/>

</Shell>
